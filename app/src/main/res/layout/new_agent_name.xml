<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue_light"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <RelativeLayout
        android:layout_alignParentTop="true"
        android:id="@+id/fake_action_bar_2"
        android:background="@color/blue_light"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="56dp">


        <TextView
            android:id="@+id/app_title_dialog"
            android:layout_marginLeft="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:text = "New Agent Name"
            android:layout_toEndOf="@+id/imageView6"
            android:layout_alignParentStart="true" />


    </RelativeLayout>


    <TextView
        android:id="@+id/name_heading_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:textColor="@android:color/white"
        android:layout_marginStart="4dp"
        android:text="Name"
        android:layout_below="@+id/fake_action_bar_2"
        android:textSize="12sp"
        android:layout_marginTop="10dp" />

    <View
        android:id="@+id/name_underline_2"
        android:layout_width="wrap_content"
        android:background="@android:color/white"
        android:layout_alignBottom="@+id/input_agent_name_dialog"
        android:layout_alignRight="@+id/input_agent_name_dialog"
        android:layout_alignEnd="@+id/input_agent_name_dialog"
        android:layout_height="1dp"
        android:layout_alignStart="@+id/name_heading_2"
        android:layout_alignLeft="@+id/name_heading_2" />

    <EditText
        android:id="@+id/input_agent_name_dialog"
        android:inputType="textPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="3dp"
        android:layout_marginStart="3dp"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:singleLine="true"
        android:background="@null"
        android:layout_below="@+id/name_heading_2" />


    <RelativeLayout
        android:layout_gravity="center|right"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/blue_light"
        android:layout_below="@+id/name_underline_2">

        <TextView
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/change_button"
            android:gravity="center"
            android:text = "Change"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:paddingLeft="30dp"
            android:paddingStart="30dp"
            android:paddingRight="20dp"
            android:paddingEnd="20dp"
            android:id="@+id/cancel_button_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text = "Cancel"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_toStartOf="@+id/change_button"
            android:layout_toLeftOf="@+id/change_button" />

    </RelativeLayout>



</RelativeLayout>